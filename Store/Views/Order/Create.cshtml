@model Order
@{
    ViewBag.Title = "Make Order";
}

<h2>Заполните форму для заказа</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="Order" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <label for="">
                    User Name
                    <input asp-for="Name" type="text">
                </label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label for="">
                    Address
                    <input asp-for="Address" type="text">
                </label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label for="">
                    Contact Phone
                    <input asp-for="ContactPhone" type="text">
                </label>
                <span asp-validation-for="ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label for="">
                    Quantity
                    <input asp-for="Quantity" type="number">
                </label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label for="">
                    Order Date
                    <input asp-for="OrderDate" type="date">
                </label>
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label for="">
                    ProductName :
                    <input disabled type="text" value="@ViewBag.Product.ProductName">
                </label>
                <input asp-for="ProductId" type="hidden" value="@ViewBag.Product.Id">
            </div>
            <button type="submit">Order</button>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}