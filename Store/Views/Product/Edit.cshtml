@using System.Diagnostics
@using System.Runtime.InteropServices.JavaScript
@model Product

@{
ViewBag.Title = "Edit product";
}

<h2>Edit product</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-action="Edit" asp-controller="Product" method="post">
            <div class="form_row">
                <label for="">
                    Name
                    <input asp-for="ProductName" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Price
                    <input asp-for="Price" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Image
                    <input asp-for="ImageUrl" type="text">
                </label>
            </div>
            
            
            <div class="form_row">
                <label for="">
                    <input asp-for="CreatedDate" type="hidden">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    <input asp-for="UpdatedDate" type="hidden">
                </label>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="BrandId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-control">
                        <option disabled selected>--Select Brand--</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
            </div>
            <button class="btn btn-outline-warning" type="submit">Update</button>
        </form>
    </div>
</div>

