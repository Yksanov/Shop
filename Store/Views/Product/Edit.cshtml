@model Product

@{
ViewBag.Title = "Edit product";
}

<h2>Edit product</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-action="Edit" asp-controller="Product" method="post">
            <div class="form_row">
                <label for="">
                    Name
                    <input asp-for="ProductName" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Price
                    <input asp-for="Price" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Image
                    <input asp-for="ImageUrl" type="text">
                </label>
            </div>
            <div class="form-row">
                <label for="">
                    <input disabled type="hidden" value="@Model.CreatedDate">
                </label>
                <input asp-for="CreatedDate" type="hidden" value="@Model.Id">
            </div>
            <div class="form-row">
                <label for="">
                    <input disabled type="hidden" value="@Model.UpdatedDate">
                </label>
                <input asp-for="UpdatedDate" type="hidden" value="@Model.Id">
            </div>
            <button class="btn btn-outline-warning" type="submit">Update</button>
        </form>
    </div>
</div>

