@{
    ViewData["Title"] = "Search product";
    Layout = "_Layout";
}

<div class="text-center">
    <input type="text" name="searchKey" id="searchKey" required placeholder="Product name" />
    <button type="button" id="submit">Find</button>
</div>

<div class="results"></div>

@section Scripts
{
    <script>
        $(document).ready(function (){
        $('#submit').click(function (event){
                let searchKey = $('#searchKey').val();
                searchKey = encodeURIComponent(searchKey);
                $('#results').load('@Url.Action("SearchProductResults", "Product") ?keyWord' + searchKey);
            });
        });
    </script>
}
