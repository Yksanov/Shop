@model List<Product>

<h2>Список продуктов</h2>
<div class="row">
    <table class="table table-success">
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Info</th>
        </tr>
        @foreach (var product in Model)
        {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.Brand.Name</td>
            <td>@product.Price</td>
            <td>
                <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">Details</a>
            </td>
        </tr>
        }
    </table>
</div>